@using EntityLayer.Concrete
@model List<Gate>
@{
    ViewBag.Title = "GetListAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kapı No</th>
        <th>Mahalle İsmi</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Git</th>
        <th>Tüm Konum Haritalarını Gör</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.GateId</th> @*th kalın yapar ifadeyi*@
            <td>@item.GateNo</td>
            <td>@item.Neighborhood.NeighborhoodName</td>
            <td><a href="/Gate/GateEdit/@item.GateId" class="btn btn-warning">Düzenle</a></td>
            <td><a href="/Gate/GateDelete/@item.GateId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Gate/GetByIdAdmin/@item.GateId" class="btn btn-primary">Konuma Git</a></td>
            <td><a href="/Gate/GetListCoordinateAdmin/" class="btn btn-info">Bütün Beslenme Noktalarına Git</a></td>
        </tr>
    }

</table>
<br />

