<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Projects</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Proje İşlemleri</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Hayvansever
                            </th>               
                            <th style="width: 8%" class="text-center">
                                Hayvan
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Animal.AnimalName == "Köpek")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Animal.AnimalName == "Kedi")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Animal.AnimalName == "Güvercin")
                            {
                                color = "badge badge-primary";
                            }
                            if (item.Animal.AnimalName == "Serçe")
                            {
                                color = "badge badge-pill";
                            }
                            if (item.Animal.AnimalName == "Sincap")
                            {
                                color = "badge badge-light";
                            }
                            if (item.Animal.AnimalName == "Geyik")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Animal.AnimalName == "Domuz")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Animal.AnimalName == "Keçi")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.Animal.AnimalName == "İnek")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.Animal.AnimalName == "Koyun")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Animal.AnimalName == "Kitap")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.HeadingStatus == false)
                            {
                                colorstatus = "btn btn-success";
                                iconname = "fa fa-play-circle";
                                statusname = "Aktif";
                            }
                            if (item.HeadingStatus == true)
                            {
                                colorstatus = "btn btn-danger";
                                iconname = "fa fa-pause-circle";
                                statusname = "Pasif";
                            }


            <tr>
                <td>
                    @item.HeadingId
                </td>
                <td>
                    <a>
                        @item.HeadingName
                    </a>
                    <br />
                    <small>
                        @item.HeadingDate
                    </small>
                </td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <img alt="Avatar" class="table-avatar" src="/image/@item.AnimalLover.AnimalLoverImage">
                            @item.AnimalLover.AnimalLoverName @item.AnimalLover.AnimalLoverSurName

                        </li>
                    </ul>
                </td>
                <td class="project-state">
                    <span class="@color">@item.Animal.AnimalName</span>
                </td>
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId
                                      ">
                        <i class="fas fa-folder">
                        </i>
                        Cevaplar
                    </a>
                    <a class="btn btn-info btn-sm" href="/Heading/UpdateHeading/@item.HeadingId">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Düzenle
                    </a>
                    <a class="@colorstatus" href="/Heading/DeleteHeading/@item.HeadingId">
                        <i class="@iconname">
                        </i>
                        @statusname
                    </a>
                </td>
            </tr>
}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <br />
    <a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Girişi</a>
</body>
</html>
@Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
{ "page-link"}
})

