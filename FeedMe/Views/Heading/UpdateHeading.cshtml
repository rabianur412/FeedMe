@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "UpdateHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateHeading", "Heading", FormMethod.Post))
{
    <h2>Başlık Güncelleme Sayfası</h2>
    <div class="form-group">
        @Html.Label("Başlık Id")
        @Html.TextBoxFor(x => x.HeadingId, new { @class = "form-control" })
        <br />
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Tarih ")
        @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
        <br />
        @Html.Label("HaycanSever Id")
        @Html.TextBoxFor(x => x.AnimalLoverId, new { @class = "form-control" })
        <br />
        @Html.Label("Hayvan")
        @Html.DropDownListFor(x => x.AnimalId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>}
