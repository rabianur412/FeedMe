@using EntityLayer.Concrete
@model List<AnimalLover>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hayvansever Listesi</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">

                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.AnimalLoverName @item.AnimalLoverSurName </b></h2>
                                            <p class="os-text-inherit text-sm"><b>Hakkında: </b> @item.AnimalLoverAbout </p>
                                            <ul class="ml-4 mb-0 fa-ul os-text-inherit">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail:@item.AnimalLoverMail</li>

                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="/image/@item.AnimalLoverImage" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/WriterPanel/MyHeading/@item.AnimalLoverId" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments">Hayvanseverin Açtığı Başlıklar</i>
                                        </a>
                                        <a href="/AnimalLover/UpdateAnimalLover/@item.AnimalLoverId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Düzenle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>}
                </div>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
    <a href="/AnimalLover/AddAnimalLover/" class="btn btn-info">Hayvansever Ekle</a>
</body>
</html>


